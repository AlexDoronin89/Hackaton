<Window x:Class="Hack.RegRooom"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hack"
        mc:Ignorable="d"
        Title="RegRooom" Height="478" Width="269">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
            <TextBlock Text="Логин" Margin="5" />
            <TextBox  Margin="5" />
            <TextBlock Text="Пароль" Margin="5"/>
            <PasswordBox PasswordChar="*"   Margin="5"/>
            <Button Content="показать пароль"/>
            <TextBlock Text="Имя" Margin="5" />
            <TextBox  Margin="5" />
            <TextBlock Text="Фамилия" Margin="5"/>
            <TextBox  Margin="5"/>
            <TextBlock Text="Отчество" Margin="5" />
            <TextBox  Margin="5" />
            <TextBlock Text="Почта" Margin="5"/>
            <TextBox Margin="5" />
            <TextBlock Text="Продукция" Margin="5"/>
            <TextBox Margin="5" />
            <CheckBox Content="Закупщик"/>
            <CheckBox Content="Поставщик" />
            <Button Content="Зарегистрироваться" Margin="20"/>
        </StackPanel>
    </Grid>
</Window>
