<Window x:Class="Hack.Purchaser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hack"
        mc:Ignorable="d"
        Title="Purchaser" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <ListBox Grid.Column="2" Grid.Row="1"    ItemsSource="{Binding}" SelectedItem="{}" >
            <ToolBar/>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="5">
                        <TextBlock FontSize="20" Text="Продукция"/>
                        <TextBlock Text="Кол-во"/>
                        <TextBlock Text="Стоимость"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel Margin="5" Orientation="Vertical" HorizontalAlignment="Center">
            <Button Content="Заказать" Margin="5" IsEnabled="False" />
            <Button Content="Личный кабинет" Margin="100" />
        </StackPanel>
    </Grid>
</Window>
